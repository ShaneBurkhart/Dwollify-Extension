{
  "manifest_version" : 2,
  "name": "Dwollify",
  "version": "0.1",
  "description": "Allows users to easily send money to any email on a web page.",
  "icons": { "256": "assets/icon_256.png" },
  "permissions": ["<all_urls>", "activeTab", "tabs"],
  "background": {
    "scripts": ["background.js"]
   },
  "browser_action": {
    "default_title": "Dwollify",
    "default_icon" : "assets/icon_256.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
